<Page x:Class="Проект.VIEW.MANAGER.PageListSupplier"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Проект.VIEW.MANAGER"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageListSupplier" Style="{StaticResource StylePageClient}">
    <ListView x:Name="listSupplerStuff"  MouseDoubleClick="listSupplerStuffMouseDoubleClick">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Название компании" DisplayMemberBinding="{Binding NameSuppler}"/>
                <GridViewColumn Header="Адресс компании" DisplayMemberBinding="{Binding Adress}"/>
            </GridView>
        </ListView.View>
    </ListView>
</Page>
